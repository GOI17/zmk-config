/ {

  /*
   * Keymap generated using https://www.keymapper.dev/
   * Import sofle_keymap.json to view it.
   */

  keymap {
    compatible = "zmk,keymap";

    Base_layer {
      label = "Base";
      bindings = <
        &mm_grescm &kp Q &kp W &hm_l LS(LC(LG(LALT))) F &kp P &kp B &kp J &kp L &hm_r RS(RC(RG(RALT))) U &kp Y &kp SINGLE_QUOTE &mm_bspc_del &kp TAB &hm_l LCTRL A &hm_l LALT R &hm_l LGUI S &hm_fast_l LSHFT T &kp G &kp M &hm_fast_r RSHFT N &hm_r RGUI E &hm_r RALT I &hm_r RCTRL O &kp SINGLE_QUOTE &td_shift_l &kp Z &kp X &hm_l LC(LG(LALT)) C &kp D &kp V &kp K &kp H &hm_r RC(RG(RALT)) COMMA &kp DOT &kp SLASH &td_shift_r &mm_grescm_gui &mm_spc_unds_layer &lt ADJUST TAB &mm_bspc_del &lt NAV RETURN &td_num_layer
      >;
      sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
    };

    Base_Qwerty_layer {
      label = "QWERTY";
      bindings = <
        &trans &trans &trans &kp E &kp R &kp T &kp Y &kp U &kp I &kp O &kp P &trans &trans &kp A &kp S &kp D &kp F &trans &kp H &kp J &kp K &kp L &kp SEMICOLON &trans &trans &trans &trans &kp C &kp V &kp B &kp N &kp M &kp COMMA &trans &trans &trans &trans &trans &trans &trans &trans &trans
      >;
    };

    Nav_layer {
      label = "Nav";
      bindings = <
        &trans &none &kp LA(LEFT) &kp UP &kp LA(RIGHT) &kp PG_UP &none &none &none &none &none &trans &trans &none &kp LEFT &kp DOWN &kp RIGHT &kp PG_DN &none &td_shift_r &kp RIGHT_GUI &kp RIGHT_ALT &kp RIGHT_CONTROL &trans &trans &none &kp LG(LEFT) &none &kp LG(RIGHT) &none &none &none &none &none &none &trans &tog NAV &trans &trans &trans &trans &tog ADJUST
      >;
      sensor-bindings = <&inc_dec_kp C_BRI_DN C_BRI_UP &inc_dec_kp LEFT RIGHT>;
    };

    Sym_layer {
      label = "Sym";
      bindings = <
        &trans &none &kp CARET &hm_l LS(LC(LG(LALT))) PIPE &kp AMPERSAND &kp PLUS &kp TILDE &mm_bracket_r &mm_bracket_sq &mm_bracket_c &kp GRAVE &trans &trans &kp LEFT_CONTROL &kp LEFT_ALT &kp LEFT_GUI &td_shift_l &kp EQUAL &kp PERCENT &kp EXCLAMATION &td_at_email &kp HASH &kp ASTERISK &kp GRAVE &trans &kp SLASH &none &kp LC(LG(LALT)) &none &kp MINUS &kp UNDERSCORE &kp DOLLAR &kp SEMICOLON &kp COLON &kp BACKSLASH &trans &tog NUM &trans &trans &trans &trans &tog SYM
      >;
      sensor-bindings = <&inc_dec_kp C_BRI_DN C_BRI_UP &inc_dec_kp LEFT RIGHT>;
    };

    Num_layer {
      label = "Num";
      bindings = <
        &trans &kp DOT &kp NUMBER_7 &kp NUMBER_8 &kp NUMBER_9 &kp PLUS &kp TILDE &mm_bracket_r &kp RS(RC(RG(RALT))) &none &none &trans &trans &kp ASTERISK &kp NUMBER_4 &kp NUMBER_5 &kp NUMBER_6 &kp EQUAL &kp PERCENT &td_shift_r &kp RIGHT_GUI &kp RIGHT_ALT &kp RIGHT_CONTROL &trans &trans &kp SLASH &kp NUMBER_1 &kp NUMBER_2 &kp NUMBER_3 &kp MINUS &kp UNDERSCORE &kp DOLLAR &hm_r RC(RG(RALT)) COMMA &kp DOT &kp SLASH &trans &tog NUM &trans &kp NUMBER_0 &trans &trans &tog SYM
      >;
      sensor-bindings = <&inc_dec_kp C_BRI_DN C_BRI_UP &inc_dec_kp LEFT RIGHT>;
    };

    Num_Word_layer {
      label = "Num Word";
      bindings = <
        &trans &trans &kp NUMBER_7 &kp NUMBER_8 &kp NUMBER_9 &trans &trans &trans &trans &trans &trans &trans &trans &trans &kp NUMBER_4 &kp NUMBER_5 &kp NUMBER_6 &trans &trans &trans &trans &trans &trans &trans &trans &trans &kp NUMBER_1 &kp NUMBER_2 &kp NUMBER_3 &trans &trans &trans &trans &trans &trans &trans &trans &trans &kp NUMBER_0 &trans &trans &trans
      >;
      sensor-bindings = <&inc_dec_kp C_BRI_DN C_BRI_UP &inc_dec_kp LEFT RIGHT>;
    };

    Func_layer {
      label = "Func";
      bindings = <
        &trans &kp F12 &kp F7 &kp F8 &kp F9 &none &none &none &kp RS(RC(RG(RALT))) &none &none &trans &trans &kp F11 &kp F4 &kp F5 &kp F6 &none &none &td_shift_r &kp RIGHT_GUI &kp RIGHT_ALT &kp RIGHT_CONTROL &trans &trans &kp F10 &kp F1 &kp F2 &kp F3 &none &none &none &kp RC(RG(RALT)) &none &none &trans &trans &trans &trans &trans &trans &trans
      >;
      sensor-bindings = <&inc_dec_kp C_BRI_DN C_BRI_UP &inc_dec_kp LEFT RIGHT>;
    };

    Adjust_layer {
      label = "Adjust";
      bindings = <
        &none &kp LG(Q) &kp LG(W) &none &none &kp LG(GRAVE) &td_bt_clear &bt BT_PRV &bt BT_NXT &ext_power EXT_POWER_TOGGLE_CMD &to BASE &to BASE_QWERTY &none &none &none &none &none &swapper_cmd_tab &kp C_MUTE &kp C_REWIND &kp C_VOLUME_DOWN &kp C_VOLUME_UP &kp C_FAST_FORWARD &none &none &kp LG(Z) &kp LG(X) &kp LG(C) &none &kp LG(V) &none &kp C_PAUSE &kp C_BRIGHTNESS_DEC &kp C_BRIGHTNESS_INC &none &none &tog NAV &trans &trans &trans &trans &tog ADJUST
      >;
      sensor-bindings = <&inc_dec_kp C_BRI_DN C_BRI_UP &inc_dec_kp LEFT RIGHT>;
    };

    Lower_layer {
      label = "Lower";
      bindings = <
        &kp TILDE &kp NUMBER_1 &kp NUMBER_2 &kp NUMBER_3 &kp NUMBER_4 &kp NUMBER_5 &kp NUMBER_6 &kp NUMBER_7 &kp NUMBER_8 &kp NUMBER_9 &kp NUMBER_0 &trans &trans &kp EXCLAMATION &kp AT_SIGN &kp HASH &kp DOLLAR &kp PERCENT &kp CARET &kp AMPERSAND &kp ASTERISK &kp LEFT_PARENTHESIS &kp RIGHT_PARENTHESIS &kp PIPE &trans &kp EQUAL &kp MINUS &kp PLUS &kp LEFT_BRACE &kp RIGHT_BRACE &kp LEFT_BRACKET &kp RIGHT_BRACKET &kp SEMICOLON &kp COLON &kp BACKSLASH &trans &trans &kp UNDERSCORE &kp TILDE &kp DEL &trans &trans
      >;
      sensor-bindings = <&inc_dec_kp C_BRI_DN C_BRI_UP &inc_dec_kp LEFT RIGHT>;
    };
  };

};
